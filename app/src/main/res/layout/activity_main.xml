<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/appbg"
    tools:context="com.example.evilmonkey.truguideapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf,UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Ver. 0.1 Beta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="16sp"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <ImageView
            app:srcCompat="@drawable/mainlogo"
            android:id="@+id/imageView"
            android:layout_marginTop="41dp"
            tools:ignore="ContentDescription"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="225dp"
            android:layout_height="225dp" />

        <Button
            android:text="Location View"
            android:layout_height="55dp"
            android:id="@+id/but_local"
            android:layout_width="320dp"
            android:layout_below="@+id/but_ar"
            android:layout_alignLeft="@+id/but_ar"
            android:layout_alignStart="@+id/but_ar"
            style="@style/Widget.AppCompat.Button.Colored"
            tools:ignore="HardcodedText"
            android:onClick="menuButtons" />

        <Button
            android:text="Tutorial"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:id="@+id/but_tuto"
            android:layout_below="@+id/but_local"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Colored"
            tools:ignore="HardcodedText"
            android:onClick="menuButtons" />

        <Button
            android:text="AR Mode"
            android:layout_width="320dp"
            android:layout_height="55sp"
            android:id="@+id/but_ar"
            android:layout_marginTop="80dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/but_tuto"
            android:layout_alignStart="@+id/but_tuto"
            tools:ignore="HardcodedText"
            android:onClick="menuButtons" />

    </RelativeLayout>
</RelativeLayout>
